{
  "compilerOptions": {
    "outDir": "./dist",
    "incremental": true,
    "moduleResolution": "Node",
    "module": "esnext",
    "target": "ES2020",
    "sourceMap": true,
    "lib": [
      "ES2020",
      "dom"
    ],
    "esModuleInterop": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "dist", "*.d.ts"]
}

